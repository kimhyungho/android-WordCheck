<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="330dp"
        android:layout_height="475dp"
        android:background="@color/darkColor">

        <TextView
            android:id="@+id/txt_spelling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:textColor="@color/whiteColor"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_close"
            tools:text="Google" />

        <TextView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="6dp"
            android:text="X"
            android:textColor="@color/whiteColor"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/whiteColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_spelling"
            tools:text="구글" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_correct"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:background="@color/yellowColor"
            app:layout_constraintEnd_toStartOf="@+id/btn_wrong"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_answer">

            <TextView
                android:id="@+id/txt_correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정답"
                android:textColor="@color/whiteColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_wrong"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:background="@color/greenColor"
            app:layout_constraintEnd_toStartOf="@+id/btn_look_answer"
            app:layout_constraintStart_toEndOf="@+id/btn_correct"
            app:layout_constraintTop_toBottomOf="@+id/txt_answer">

            <TextView
                android:id="@+id/txt_wrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오답"
                android:textColor="@color/whiteColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_look_answer"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:background="@color/blueColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_wrong"
            app:layout_constraintTop_toBottomOf="@+id/txt_answer">

            <TextView
                android:id="@+id/txt_look_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정답보기"
                android:textColor="@color/whiteColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/txt_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음문제"
            android:textColor="@color/whiteColor"
            app:layout_constraintBottom_toBottomOf="@+id/img_next"
            app:layout_constraintEnd_toStartOf="@+id/img_next"
            app:layout_constraintTop_toTopOf="@+id/img_next" />

        <TextView
            android:id="@+id/txt_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이전문제"
            android:textColor="@color/whiteColor"
            app:layout_constraintBottom_toBottomOf="@+id/img_previous"
            app:layout_constraintStart_toEndOf="@+id/img_previous"
            app:layout_constraintTop_toTopOf="@+id/img_previous" />

        <ImageView
            android:id="@+id/img_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_correct"
            app:srcCompat="@android:drawable/ic_media_rew" />

        <ImageView
            android:id="@+id/img_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_look_answer"
            app:srcCompat="@android:drawable/ic_media_ff" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textColor="@color/whiteColor"
            app:layout_constraintBottom_toTopOf="@+id/txt_spelling"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="명사" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
